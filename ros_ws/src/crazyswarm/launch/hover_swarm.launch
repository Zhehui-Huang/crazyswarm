<!--   <node pkg="rqt_plot" type="rqt_plot" name="rqt_plot_pitch" args="/cf3/log1/values[0] /cf3/log1/values[4] /cf45/log1/values[5]"/> -->
<!--   <node pkg="rqt_plot" type="rqt_plot" name="rqt_plot_obst_obs" args="/cf2/log1/values[0] /cf2/log1/values[1]"/> -->


</launch>
